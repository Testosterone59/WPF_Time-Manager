<UserControl x:Class="Time_Owner.TaskbarMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Time_Owner"
             mc:Ignorable="d" 
             Height="50" Width="300" Name="message" Margin="0,0,5,0" BorderThickness="2" BorderBrush="White">
    <Grid Background="#353535" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <Label Background="#353535" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="10,0" Foreground="White" FontSize="16" FontFamily="/Time_Owner;component/Fonts/#Proxima Nova Cn Rg" MouseLeftButtonUp="OnClick" >
            <Label.Content>
                <TextBlock Text="{Binding ElementName=message, Path=Text}" TextWrapping="Wrap" IsHitTestVisible="False"/>
            </Label.Content>
        </Label>
    </Grid>
</UserControl>
